<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SearchFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:id="@+id/txtV_fSearch_Search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >
        </TextView>
        <TextView
            android:id="@+id/txtV_fSearch_TopGenres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/txtV_fSearch_Search"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/mostRecent"
            >
        </TextView>
        <ImageView
            android:id="@+id/iv_fSearch_Kaleo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@+id/txtV_fSearch_TopGenres"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/iv_fSearch_flamenco"
            android:src="@drawable/kaleo"
            >

        </ImageView>

        <ImageView
            android:id="@+id/iv_fSearch_flamenco"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@+id/txtV_fSearch_TopGenres"
            app:layout_constraintStart_toEndOf="@id/iv_fSearch_Kaleo"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/flamenco"
            >
        </ImageView>
        <ImageView
            android:id="@+id/iv_fSearch_pop"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_fSearch_Kaleo"
            app:layout_constraintStart_toEndOf="@id/iv_fSearch_Kaleo"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/pop"
            >
        </ImageView>
        <ImageView
            android:id="@+id/iv_fSearch_electro"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_fSearch_Kaleo"
            app:layout_constraintEnd_toStartOf="@id/iv_fSearch_flamenco"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/electro"
            >
        </ImageView>
    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>