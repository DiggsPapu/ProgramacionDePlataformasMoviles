<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_CharacterDetail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.CharacterDetailsFragment">
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_CharactersFragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/topappbarmenucharactersfragment"
        style="@style/Widget.MaterialComponents.Toolbar.Primary"
        >

    </com.google.android.material.appbar.MaterialToolbar>
    <ImageView
        android:id="@+id/iv_fragmentDetail"
        android:layout_width="@dimen/iv_fragmentDetail_size"
        android:layout_height="@dimen/iv_fragmentDetail_size"
        android:layout_marginVertical="@dimen/iv_VerticlaMargin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:srcCompat="@tools:sample/avatars"
        >
    </ImageView>
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/nametxtv_detailsFragment"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="@string/name_char"
        android:textSize="18sp"
        android:hint="name"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginVertical="@dimen/tv_VMargin"
        app:layout_constraintTop_toBottomOf="@+id/iv_fragmentDetail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >
    </com.google.android.material.textfield.TextInputEditText>
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/speciestxtv_detailsFragment"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:hint="@string/species"
        android:textSize="10sp"
        android:layout_marginEnd="@dimen/margin1"
        android:layout_marginStart="@dimen/margin1"
        android:layout_marginVertical="@dimen/margin3"
        app:layout_constraintTop_toBottomOf="@+id/nametxtv_detailsFragment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
    </com.google.android.material.textfield.TextInputEditText>
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/statustxtv_detailsFragment"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:hint="@string/status"
        android:textSize="10sp"
        android:layout_marginEnd="@dimen/margin1"
        android:layout_marginVertical="@dimen/margin1"
        android:layout_marginStart="@dimen/margin1"
        app:layout_goneMarginEnd="@dimen/margin1"
        app:layout_constraintTop_toBottomOf="@+id/speciestxtv_detailsFragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

    </com.google.android.material.textfield.TextInputEditText>
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/gendertxtv_detailsFragment"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:hint="@string/gender"
        android:textSize="10sp"
        android:layout_marginEnd="@dimen/margin1"
        android:layout_marginVertical="@dimen/margin1"
        android:layout_marginStart="@dimen/margin1"
        app:layout_goneMarginEnd="@dimen/margin1"
        app:layout_constraintTop_toBottomOf="@+id/statustxtv_detailsFragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >
    </com.google.android.material.textfield.TextInputEditText>
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/origintxtv_detailsFragment"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:hint="@string/origin"
        android:textSize="10sp"
        android:layout_marginEnd="@dimen/margin1"
        android:layout_marginVertical="@dimen/margin1"
        android:layout_marginStart="@dimen/margin1"
        app:layout_goneMarginEnd="@dimen/margin1"
        app:layout_constraintTop_toBottomOf="@+id/gendertxtv_detailsFragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

    </com.google.android.material.textfield.TextInputEditText>
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/episodeapptxtv_detailsFragment"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:hint="Episode appereances"
        android:textSize="10sp"
        android:layout_marginEnd="@dimen/margin1"
        android:layout_marginStart="@dimen/margin1"
        android:layout_marginVertical="@dimen/margin1"
        app:layout_constraintTop_toBottomOf="@+id/origintxtv_detailsFragment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

    </com.google.android.material.textfield.TextInputEditText>
    <Button
        android:id="@+id/save_btn_detailsFragment"
        android:text="@string/save"
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/episodeapptxtv_detailsFragment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

    </Button>
</androidx.constraintlayout.widget.ConstraintLayout>